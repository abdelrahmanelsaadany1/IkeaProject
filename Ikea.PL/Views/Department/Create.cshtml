@model CreatedDepartmentDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<form action="Create" method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
		<label class="form-label" asp-for="Code"></label>
		<input class="form-control" asp-for="Code" />
		<span asp-validation-for="Code" class="text-danger"></span>
	
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Name"></label>
		<input class="form-control" asp-for="Name" />
		<span asp-validation-for="Name" class="text-danger"></span>

	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Description"></label>
		<textarea class="form-control" asp-for="Description"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="CreationDate"></label>
		<input type="date" class="form-control" asp-for="CreationDate" />
		<span asp-validation-for="CreationDate" class="text-danger"></span>

	</div>
	<div>
		<input type="submit" value="Create" class="btn btn-primary" />
		<a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
	</div>
</form>

